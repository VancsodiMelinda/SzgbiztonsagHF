@page
@model NinjaStore.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h1>Registration</h1>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Input.Username" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Input.Email" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Input.Password" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Confirm password</label>
            <div class="col-md-10">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <p class="control-label col-md-2"></p>
            <div class="col-md-10">
                <input type="submit" value="Registration" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>
