@model NinjaStore.DAL.Models.CaffMetadata
@{
    var showButtons = (bool)ViewData["ShowButtons"];
}

    <div class="card" style="width: 18rem; display: inline-block;">
        <div class="video">
            <a asp-page="./Details" asp-route-id="@Model.FileId">
                <img class="card-img-top"
                     style="width: 100%; height: 10vw; object-fit: cover;"
                     src="data:image;base64,@System.Convert.ToBase64String(Model.Preview)" alt="...">
            </a>
            <h6 class="text-right text-light" style="background-color:black;">@Html.DisplayFor(modelItem => Model.Duration)</h6>
        </div>
        <div class="card-body">
            <h5>@Html.DisplayFor(modelItem => Model.FileName)</h5>
            <p class="card-subtitle text-left">Uploader: @Html.DisplayFor(modelItem => Model.User.UserName)</p>
            <p class="card-subtitle text-left">Downloaded: @Html.DisplayFor(modelItem => Model.DownloadCounter)</p>
        </div>

        @if (showButtons)
        {
            <div class="card-footer text-center">
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@Model.FileId">Details</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@Model.FileId">Delete</a>
            </div>
        }
    </div>
